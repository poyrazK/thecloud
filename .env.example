# Database Configuration
DATABASE_URL=postgres://cloud:cloud@postgres:5432/thecloud?sslmode=disable
DB_USER=cloud
DB_PASSWORD=cloud
DB_NAME=thecloud

# API Configuration
PORT=8080
GIN_MODE=release
API_RATE_LIMIT=100
ENVIRONMENT=production

# Security
JWT_SECRET=change_this_to_a_secure_random_string_in_production
SECRETS_ENCRYPTION_KEY=change_this_to_a_secure_32_character_key_in_production

# Infrastructure
# For Docker-in-Docker or accessing host docker daemon
DOCKER_HOST=unix:///var/run/docker.sock
